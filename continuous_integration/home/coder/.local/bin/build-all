#!/usr/bin/env bash

build_all() {
    set -xeuo pipefail;

    cd ~/;

    if type conda >/dev/null 2>&1; then
        . make-conda-env;
    fi

    build-legate-cpp;
    build-legate-wheel;
    build-legate-conda;
    
    build-cunumeric-cpp;
    build-cunumeric-wheel;
    build-cunumeric-conda;
}

(build_all "$@");

